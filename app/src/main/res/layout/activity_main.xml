<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.huabao.ttsdkdemo.activity.MainActivity">

    <TextView
        android:id="@+id/tv_ttservice_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="44dp"/>

    <TextView
        android:id="@+id/tv_tictag_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="44dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onSearchDeviceButtonClicked"
        android:text="@string/btn_search_device"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onDeviceDetailButtonClicked"
        android:text="@string/btn_device_detail"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onRemoveDeviceButtonClicked"
        android:text="@string/btn_remove_device"/>

</LinearLayout>
